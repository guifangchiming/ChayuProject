<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phone1000.chayu.MainActivity">

    <com.phone1000.chayu.weidgt.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/main_controller_height"
        android:layout_marginTop="50dp"
        />

    <RadioGroup
        android:id="@+id/main_controller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_controller_height"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:paddingTop="4dp"
        >

        <RadioButton
            android:id="@+id/main_controller_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/home_page"
            android:textColor="@drawable/main_text_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/home_page"
            android:checked="true"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/main_controller_cha_ping"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/cha_ping_page"
            android:textColor="@drawable/main_text_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/cha_ping"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/main_controller_shi_ji"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/shi_ji_page"
            android:textColor="@drawable/main_text_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/shi_ji"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/main_controller_quan_zi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/quan_zi_page"
            android:textColor="@drawable/main_text_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/quan_zi"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/main_controller_wen_zhang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/wen_zhang_page"
            android:textColor="@drawable/main_text_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/wen_zhang"
            android:textSize="15sp"
            />
    </RadioGroup>

</FrameLayout>
